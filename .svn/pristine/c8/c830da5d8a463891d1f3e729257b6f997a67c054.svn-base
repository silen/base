<extend name="Public/base"/>

<block name="nav">
    <div class="am-cf am-padding">
        <div class="am-fl am-cf"><strong class="am-text-primary am-text-lg">推荐位</strong> /
            <small>日常统计</small>
        </div>
    </div>
</block>
<block name="body">
    <div class="am-g">

        <form>
            <input type="hidden" name="m" value="{$Think.MODULE_NAME}">
            <input type="hidden" name="c" value="{$Think.CONTROLLER_NAME}">
            <input type="hidden" name="a" value="{$Think.ACTION_NAME}">
            <div class="am-u-sm-12 am-u-md-9">
                <div class="am-form-group">
                    <div class="am-u-sm-5" style="float:left;">
                        开始时间

                        <input type="text" class="am-form-field" style="width: 200px;  display:inline" value="{$starttime|date='Y-m-d',###}" name="starttime" placeholder="日历组件" data-am-datepicker readonly required />
                    </div>

                    <div class="am-u-sm-6" style="float:left;">
                        结束时间
                        <input type="text" class="am-form-field" style="width: 200px;  display:inline" value="{$endtime|date='Y-m-d',###}" name="endtime" placeholder="日历组件" data-am-datepicker readonly required />
                    </div>
                    <input class="am-btn am-btn-default" type="submit" value="搜索">
                </div>

            </div>

        </form>
    </div>

    <div class="am-g">

        <div class="am-panel am-panel-default">
            <div class="am-panel-hd">推荐位</div>
            <div class="am-panel-bd">
                <table class="am-table am-table-striped am-table-hover table-main">
                    <thead>
                    <tr>
                        <th class="table-title">推荐位</th>
                        <th class="table-type">pv</th>

                    </tr>
                    </thead>
                    <tbody>
                    <volist name="info" id="data">
                        <tr>

                            <td>{$data.recommend}</td>
                            <td>{$data.c}</td>

                        </tr>

                    </volist>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="am-g">

        <div class="am-panel am-panel-default">
            <div class="am-panel-hd">内容</div>
            <div class="am-panel-bd">
                <table class="am-table am-table-striped am-table-hover table-main">
                    <thead>
                    <tr>
                        <th class="table-title">内容标题</th>
                        <th class="table-title">推荐位</th>
                        <th class="table-type">pv</th>

                    </tr>
                    </thead>
                    <tbody>
                    <volist name="content" id="data">
                        <tr>

                            <td>{$data.content.title}</td>
                            <td>{$data.recommend}</td>
                            <td>{$data.c}</td>

                        </tr>

                    </volist>
                    </tbody>
                </table>
            </div>
        </div>
    </div>


</block>