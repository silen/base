<block name="script">
    <script>
        function del(id)
        {
            if (confirm('是否删除ID为'+id+"的数据")){
                $.post("{:U('recommend_del')}", {id:id}, function(json){
                    if (!json.s) {
                        alert(json.info)
                        return false;
                    }
                    alert('删除的ID：'+json.id)
                    window.location.reload()
                }, 'json');
            }

        }
    </script>
</block>
