<extend name="Public/base"/>

<block name="nav">
    <div class="am-cf am-padding">
        <div class="am-fl am-cf"><strong class="am-text-primary am-text-lg">推荐位</strong> /
            <small>内容</small>
        </div>
    </div>
</block>
<block name="body">
    <div class="am-g">

        <form>
            <input type="hidden" name="m" value="{$Think.MODULE_NAME}">
            <input type="hidden" name="c" value="{$Think.CONTROLLER_NAME}">
            <input type="hidden" name="a" value="{$Think.ACTION_NAME}">
            <div class="am-u-sm-12 am-u-md-3">
                <div class="am-form-group">
                    <select name="rid" data-am-selected="{btnSize: 'sm'}">
                        <option value="0">选择推荐位</option>
                        <volist name="recommend" id="v">
                            <option value="{$key}">{$v}</option>
                        </volist>

                    </select>
                </div>
            </div>
            <div class="am-u-sm-12 am-u-md-3">
                <div class="am-input-group am-input-group-sm">
                    <input type="text" name="key" value="{$Think.get.key}" class="am-form-field">
          <span class="am-input-group-btn">
            <input class="am-btn am-btn-default" type="submit" value="搜索">
          </span>
                </div>
            </div>
        </form>
    </div>

    <div class="am-g">
        <div class="am-u-sm-12">
            <form class="am-form">
                <table style="border: 1px solid #e9e9e9;" class="am-table am-table-striped am-table-hover table-main">
                    <thead>
                    <tr>
                        <th class="table-check"><input id="checkBox" type="checkbox"/></th>
                        <th class="table-id">ID</th>
                        <th class="table-title">标题</th>
                        <th class="table-title">推荐位</th>
                        <th class="table-type">链接</th>
                        <th class="table-author am-hide-sm-only">状态</th>
                        <th class="table-author am-hide-sm-only">pv</th>
                        <th class="table-author am-hide-sm-only">排序</th>
                        <th class="table-date am-hide-sm-only">时间</th>
                        <th class="table-set">操作</th>
                    </tr>
                    </thead>
                    <tbody>
                    <volist name="list" id="data">
                        <tr>
                            <td><input class="checkbox-id" name="ids[]" value="{$data.id}" type="checkbox"/></td>
                            <td>{$data.id}</td>
                            <td><a href="{:U('content_add', array('id'=>$data['id']))}">{$data.title}</a></td>
                            <td>{$data.recommend_title}</td>
                            <td>{$data.url}</td>

                            <td class="am-hide-sm-only">{$data.status_val}</td>
                            <td class="am-hide-sm-only">{$data.pv}</td>
                            <td>{$data.sort}</td>
                            <td>开始时间:{$data.starttime|date='Y-m-d',###}<br>结束时间:{$data.starttime|date='Y-m-d',###}</td>
                            <td>
                                <div class="am-btn-toolbar">
                                    <div class="am-btn-group am-btn-group-xs">
                                        <a href="{:U('content_add', array('id'=>$data['id']))}"
                                           class="am-btn am-btn-default am-btn-xs am-text-secondary"><span
                                                class="am-icon-pencil-square-o"></span> 编辑
                                        </a>

                                        <a href="javascript:void(0)" onclick="del('{$data.id}')"
                                           class="am-btn am-btn-default am-btn-xs am-text-danger am-hide-sm-only"><span
                                                class="am-icon-trash-o"></span> 删除
                                        </a>
                                    </div>
                                </div>
                            </td>
                        </tr>

                    </volist>
                    </tbody>
                </table>
                <div class="am-u-sm-6 click-a">
                    <a class="am-btn am-btn-danger" href="javascript:void(0);" data-type="4">删除</a><a class="am-btn am-btn-warning" href="javascript:void(0);" data-type="2">禁用</a><a class="am-btn am-btn-success" href="javascript:void(0);" data-type="1">发布</a><a class="am-btn am-btn-default" href="javascript:void(0);" data-type="3">存档</a>
                </div>
                <div class="am-cf tk-pagenav">
                    {$show}
                </div>

            </form>
        </div>

    </div>
</block>
<block name="script">
    <script>
        $(function (e) {
            var $rid = "{$_GET['rid'] ? $_GET['rid'] : 0}"
            $('select[name="rid"]').val($rid);

            $('#checkBox').change(function () {
                var $isTrue = $(this).is(':checked')

                for (var i = 0; i < $('.checkbox-id').length; i++) {
                    $('.checkbox-id')[i].checked = $isTrue;
                }
            })
        })
        $('.click-a a').click(function () {
            var $title = $(this).text();
            var $type = $(this).attr('data-type');
            if (!confirm('是否'+$title))return false;
            if ($('.checkbox-id:checked').length == 0)return false;
            var ids = []
            $('.checkbox-id:checked').each(function (e) {
                ids.push($(this).val())
            })
            $.post("{:U('updateStatus')}", {type:$type ,ids: ids}, function (e) {
                if (!e.s) {
                    alert(e.info)
                    return false;
                }

                alert($title+'成功')
                window.location.reload()
            }, 'json')
        })
        function del(id) {
            if (confirm('是否删除ID为' + id + "的数据")) {
                $.post("{:U('content_del')}", {id: id}, function (json) {
                    alert('删除的ID：' + json.id)
                    window.location.reload()
                }, 'json');
            }

        }
    </script>
</block>